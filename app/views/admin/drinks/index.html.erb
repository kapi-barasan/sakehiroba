<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-info text-white d-inline px-4">投稿一覧</h4>
    </div>
        <div class="col-8 offset-2">
        <table class='table table-striped table-light my-5'>
        <thead class="table-info">
        <tr>
          <th>投稿ID</th>
          <th>商品名</th>
          <th>会員名</th>
          <th>感情スコア</th>
        </tr>
      </thead>
      <tbody>
        <% @drinks.each do |drink| %>
          <tr>
            <td><%= drink.id %></td>
            <td>
              <%= link_to admin_drink_path(drink.id) do %>
                <%= drink.name %>
              <% end %>
            </td>
            <td><%= drink.user.name %></td>
            <td><%= drink.score %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
  </div>
</div>
