<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-info text-white d-inline px-4"><%= @user.name %>の会員詳細</h4>
    </div>
    <div class="col-8 offset-2">
      <table class="table table-light my-5">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id%></td>
          </tr>
          <tr>
            <td>名前</td>
            <td>
              <%= @user.name %>
            </td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @user.is_deleted == true %>
                <p>退会済</p>
              <% else %>
                <p>有効</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success mx-3" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>