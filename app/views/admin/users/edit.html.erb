<div class="container">
  <div class="row">
    <div class="col-8 offset-1">
      <h4 class="bg-info text-white d-inline px-4"><%= @user.name %>の会員情報編集</h4>
    </div>
    <div class="col-8 offset-2">
      <table class="table table-light my-5">
        <tbody>
          <%= form_with model:@user, url: admin_user_path(@user.id) do |f| %>
            <tr>
              <td><%= f.label :id, "会員ID" %></td>
              <td colspan="4"><%= @user.id %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "氏名" %></td>
              <td><%= f.text_field :name %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.text_field :email %></td>
            </tr>
            <tr>
              <td><%= f.label :status, "会員ステータス" %></td>
              <td>
                <%= f.radio_button :is_deleted, "true" %>
        　       <%= f.label :is_deleted, "退会済", {value: :true, style: "display: inline-block;"} %>
        　       <%= f.radio_button :is_deleted, "false" %>
        　       <%= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>
              </td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn btn-success btn-lg" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>