<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><%= link_to image_tag("logo.jpg"), "/" %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="mx-2">
            <%= link_to public_user_path(current_user),class: 'btn btn-outline-light nav-link text-light' do %>
               マイページ
            <% end %>
          </li>
          <li class="mx-2">
            <%=  link_to new_public_drink_path ,class: 'btn btn-outline-light nav-link text-light' do %>
               投稿する
            <% end %>
          </li>
          <li class="mx-2">
            <%=  link_to public_drinks_path ,class: 'btn btn-outline-light nav-link text-light' do %>
               みんなの投稿
            <% end %>
          </li>
          <li class="mx-2">
            <%= link_to destroy_user_session_path, method: :delete,class: 'btn btn-outline-light nav-link text-light' do %>
               ログアウト
            <% end %>
          </li>
        <% elsif admin_signed_in? %>
            <li class="mx-2">
              <%=  link_to admin_drinks_path ,class: 'btn btn-outline-light nav-link text-light' do %>
                投稿一覧
              <% end %>
            </li>
            <li class="mx-2">
              <%=  link_to admin_users_path ,class: 'btn btn-outline-light nav-link text-light' do %>
                会員一覧
              <% end %>
            </li>
            <li class="mx-2">
              <%= link_to destroy_admin_session_path, method: :delete,class: 'btn btn-outline-light nav-link text-light' do %>
               ログアウト
              <% end %>
            </li>

        <% else %>
          <li class="mx-2">
            <%= link_to root_path,class: 'btn btn-outline-light nav-link text-light' do %>
               トップ
            <% end %>
          </li>
          <li class="mx-2">
            <%= link_to new_user_registration_path,class: 'btn btn-outline-light nav-link text-light' do %>
               新規登録
            <% end %>
          </li>
          <li class="mx-2">
            <%= link_to new_user_session_path ,class: 'btn btn-outline-light nav-link text-light' do %>
               ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>