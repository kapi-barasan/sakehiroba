<table>
  <tbody>
      <% drink.drink_comments.each do |drink_comment| %>
      <tr>

        <td>
          <%= link_to public_user_path(drink_comment.user) do %>
            <%= image_tag drink_comment.user.get_image(100,100) %><br>
            <%= drink_comment.user.name %>
          <% end %>
        </td>
        <td><%= drink_comment.comment %></td>
        <td>
          <% if drink_comment.user == current_user %>
            <%= link_to "Destroy", public_drink_drink_comment_path(drink, drink_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>