<table>
  <tbody>
      <% drink.drink_comments.each do |drink_comment| %>
      <tr>
        <td>
          <%= link_to user_path(drink_comment.user) do %>
            <%= image_tag drink_comment.user.get_image(50,50) %><br>
            <%= drink_comment.user.name %>
          <% end %>
        </td>
        <td><%= drink_comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= drink_comment.comment %></td>
        <td>
          <% if drink_comment.user == current_user %>
            <%= link_to "削除", drink_drink_comment_path(drink, drink_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>