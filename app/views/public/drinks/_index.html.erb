  <tbody>
    <% drinks.each do |drink| %>
    <div class="col-9">
      <h1 class="image">
        <%= link_to drink_path(drink.id) do %>
          <%= image_tag drink.get_image(150, 150) %>
        <% end %>
      </h1>
      <table class="table table-striped table-light">
        <tbody>
           <tr>
            <th scope="row">商品名</th>
            <td>
              <%= link_to drink_path(drink.id) do %>
                <%= drink.name %>
              <% end %>
              </td>
          </tr>
          <tr>
            <th scope="row">内容</th>
            <td><%= drink.body %></td>
          </tr>
          <tr>
            <th scope="row">ユーザー名</th>
            <td>
              <%= link_to user_path(drink.user) do %>
                <%= image_tag drink.user.get_image(50, 50) %><%= drink.user.name %>
              <% end %>
              </td>
          </tr>
          <tr>
            <th scope="row">タグ</th>
            <td>
              <% drink.tags.each do |tag| %>
                <%= tag.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row">評価</th>
            <td>
              <div id="star-rate<%= drink.id%>"></div>
                <script>
                  init();
                  function init(){
                  if (0 < $("#star-rate<%= drink.id %> img").length) return false;
                  $('#star-rate<%= drink.id%>').raty({
                    size      : 10,
                    starOff   : '<%= asset_path('star-off.png') %>',
                    starOn    : '<%= asset_path('star-on.png') %>',
                    half      : false,
                    readOnly: true,
                    score: <%= drink.rate %>,
                    });
                    }
                </script>
            </td>
          </tr>
           <tr>
            <td>
               <% if drink.favorited_by?(current_user) %>
                <p>
                  <%= link_to drink_favorite_path(drink), method: :delete do %>
                    ♥<%= drink.favorites.count %> いいね
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to drink_favorites_path(drink), method: :post do %>
                    ♡<%= drink.favorites.count %> いいね
                  <% end %>
                </p>
              <% end %>
            </td>
          </tr>
          <tr>
            <th><%= render "public/drink_comments/counter", drink: drink %></th>
            <td></td>
          </tr>
          <tr>
  		      <th scope="row">投稿日時</th>
  		      <td><%= drink.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          </tr>
            </tbody>
            </table>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>