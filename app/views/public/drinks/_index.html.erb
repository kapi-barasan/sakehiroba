  <tbody>
    <% drinks.each do |drink| %>
    <div class="col-9">
      <h1>
        <%= link_to public_drink_path(drink.id) do %>
          <%= image_tag drink.get_image(160, 160) %>
        <% end %>
      </h1>
      <table class="table table-striped table-light">
        <tbody>
           <tr>
            <th scope="row">商品名</th>
            <td><%= drink.name %></td>
          </tr>
          <tr>
            <th scope="row">内容</th>
            <td><%= drink.body %></td>
          </tr>
          <tr>
            <th scope="row">ユーザー名</th>
            <td><%= image_tag drink.user.get_image(50, 50) %><%= drink.user.name %></td>
          </tr>
          <tr>
            <th scope="row">タグ</th>
            <td>
              <% drink.tags.each do |tag| %>
                <%= tag.name %>
                <!--<li style="list-style: none;"><%#= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %></li>-->
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row">評価</th>
            <td>
              <div id="star-rate<%= drink.id%>"></div>
            <script>
              init();
              function init(){
              if (0 < $("#star-rate<%= drink.id %> img").length) return false;
              $('#star-rate<%= drink.id%>').raty({
                size      : 10,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                half      : false,
                readOnly: true,
                score: <%= drink.rate %>,
                });
              }
            </script>
            </td>
          </tr>
        <td><%= render "public/drink_comments/counter", drink: drink %></td>
            </tbody>
            </table>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>