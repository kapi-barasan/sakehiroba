<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>名前</th>
      <th>内容</th>
      <th>タグ</th>
      <th>評価</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% drinks.each do |drink| %>
      <tr>
        <td>
          <%#= image_tag drink.user.get image, size:'50x50' %>
        </td>
        <td>
          <%= link_to public_drink_path(drink.id) do %>
            <%= drink.name %>
          <% end %>
        </td>
        <td><%= drink.body %></td>
        <td>
          <%# drink.tags.each do |tag| %>
            <!--<li style="list-style: none;"><%#= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %></li>-->
          <%# end %>
        </td>
        <td><%#= render "drink_comments/counter", drink: drink %></td>
        <td><%#= render "drinks/static_rate", drink: drink %></td>
      </tr>
    <% end %>
  </tbody>
</table>