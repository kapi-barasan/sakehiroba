<div class="container">
  <h3 class="d-inline-block px-4 ml-5 orange bg-info text-white"><i class="fas fa-user dark-brown"></i> 新規会員登録</h3>

  <div class="mx-4 mt-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "layouts/errors", obj: @user %><p id="notice"><%= notice %></p>

    <div class="form-group row">
      <label for="name" class="col-sm-3 col-form-label">ニックネーム</label>
      <%= f.text_field :name, autocomplete: "name" %>
    </div>

    <div class="form-group row">
      <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
      <%= f.email_field :email, autocomplete: "email", class: "col-9", "placeholder" => "sample@example.com" %>
    </div>

    <div class="form-group row">
      <label for="password" class="col-sm-3 col-form-label">パスワード(6文字以上)</label>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="form-group row">
      <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード(確認用)</label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions mt-1">
      <label for="submit" class="col-sm-3 col-form-label"></label>
      <%= f.submit "新規登録", class: "btn bg-dark-brown px-5 btn-success" %>
    </div>
  <% end %>
  </div>

  <div class="sign-up mt-3">
    <h5 class="bg-info text-white d-inline px-4"> 既に登録済みの方</h3>
    <p class="text-center"><%= link_to "こちら", new_user_session_path, class: "btn btn-info hover-link" %> からログインしてください。</p>
  </div>
</div>